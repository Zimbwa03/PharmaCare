modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd PharmaCarePro && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36083
externalPort = 3000

[[ports]]
localPort = 37591
externalPort = 3001

[[ports]]
localPort = 42333
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd PharmaCarePro && npm run start"]
build = ["bash", "-c", "cd PharmaCarePro && npm run build"]
